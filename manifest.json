{
    "manifest_version": 3,
    "name": "Hola Mundo Pro",
    "version": "1.0",
    "description": "Una extensión básica de Chrome con diseño premium.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://chatgpt.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*"
            ],
            "js": [
                "chatgpt.js",
                "content.js"
            ]
        }
    ]
}